<mat-toolbar color="primary">
    <mat-icon (click)="manageBudgets()" class="arrow-button">arrow_back</mat-icon>
    <span>Add New Budget</span>
  </mat-toolbar>
  
  <form [formGroup]="newAuthor" (ngSubmit)="addBudget()">
  
    <div>
      <mat-form-field>
        <input matInput formControlName="newAuthorName" placeholder="Budget Name">
        <mat-error *ngIf="newAuthor.get('newAuthorName').hasError('required')">
          <strong>required</strong>
        </mat-error>
      </mat-form-field>
    </div>
  
    <div>
      <mat-form-field>
        <input matInput formControlName="newAuthorAmount" placeholder="Budget Amount">
        <mat-error *ngIf="newAuthor.get('newAuthorAmount').hasError('required')">
          <strong>required</strong>
        </mat-error>
        <mat-error *ngIf="newAuthor.get('newAuthorAmount').hasError('invalidNumber')">
          <strong>must be a valid amount</strong>
        </mat-error>
      </mat-form-field>
    </div>
  
    <div formGroupName="newAuthorDate">
      <div>
        <mat-form-field>
          <input matInput formControlName="newAuthorStartDate" placeholder="Budget Start" type="month">
        </mat-form-field>
      </div>
      <div>
        <mat-form-field>
          <input matInput formControlName="newAuthorEndDate" placeholder="Budget Finish" type="month">
        </mat-form-field>
      </div>
      <mat-error *ngIf="newAuthor.get('newAuthorDate').hasError('startDateIsAfterEndDate')">
        <strong>Budget Start must be before Budget Finish</strong>
      </mat-error>
  
    </div>
    <div>    
      <button mat-raised-button color="primary" [disabled]="newAuthor.invalid" type="submit">Submit</button>
    </div>
    
  </form>