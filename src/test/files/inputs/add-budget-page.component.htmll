<mat-toolbar color="primary">
    <mat-icon (click)="manageBudgets()" class="arrow-button">arrow_back</mat-icon>
    <span>Add New Budget</span>
  </mat-toolbar>
  
  <form [formGroup]="budget" (ngSubmit)="addBudget()">
  
    <div>
      <mat-form-field>
        <input matInput formControlName="budgetName" placeholder="Budget Name">
        <mat-error *ngIf="budget.get('budgetName').hasError('required')">
          <strong>required</strong>
        </mat-error>
      </mat-form-field>
    </div>
  
    <div>
      <mat-form-field>
        <input matInput formControlName="budgetAmount" placeholder="Budget Amount">
        <mat-error *ngIf="budget.get('budgetAmount').hasError('required')">
          <strong>required</strong>
        </mat-error>
        <mat-error *ngIf="budget.get('budgetAmount').hasError('invalidNumber')">
          <strong>must be a valid amount</strong>
        </mat-error>
      </mat-form-field>
    </div>
  
    <div formGroupName="budgetDate">
      <div>
        <mat-form-field>
          <input matInput formControlName="budgetStartDate" placeholder="Budget Start" type="month">
        </mat-form-field>
      </div>
      <div>
        <mat-form-field>
          <input matInput formControlName="budgetEndDate" placeholder="Budget Finish" type="month">
        </mat-form-field>
      </div>
      <mat-error *ngIf="budget.get('budgetDate').hasError('startDateIsAfterEndDate')">
        <strong>Budget Start must be before Budget Finish</strong>
      </mat-error>
  
    </div>
    <div>    
      <button mat-raised-button color="primary" [disabled]="budget.invalid" type="submit">Submit</button>
    </div>
    
  </form>